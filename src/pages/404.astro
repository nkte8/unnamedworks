---
const pageTitle = "404 Not Found.";
const url = Astro.url.pathname;
const cardUrl = new URL("/cards/main.png", Astro.url);

import BaseLayout from "@/layouts/BookLayout.astro";
import Menu from "@/components/menu/main.astro";

import { Image } from 'astro:assets';
import img_404 from "@/images/404.png"
---

<style>
    img {
        width: 100%;
        height: auto;
        margin: auto;
        margin-top: 10%;
    }
</style>
<BaseLayout pageTitle={pageTitle} , page_url={url} , cardUrl={cardUrl}>
    <Image src={img_404} alt="404 not found..."/>
    <Menu slot="header" />
</BaseLayout>

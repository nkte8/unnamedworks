---
interface Props {
    pageTitle: string;
    page_url: string;
    card_url: string;
}
const { pageTitle, page_url, card_url } = Astro.props;

const url = new URL(page_url, Astro.url);
---

<link rel="icon" href="/materials/favicon.ico" />
<link
    rel="apple-touch-icon"
    sizes="180x180"
    href="/materials/app-touch-icon.png"
/>
<meta property="og:url" content={url} />
<meta property="og:type" content="website" />
<meta property="og:title" content={pageTitle} />
<meta property="og:description" content="The all just hobbies. some life and illustration." />
<meta property="og:site_name" content="noname" />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content="@Il_______l" />
<meta name="twitter:title" content={pageTitle} />
<meta name="twitter:description" content="" />
<meta name="twitter:image" content={card_url} />
<meta property="og:image" content={card_url} />
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="generator" content={Astro.generator} />
<meta name="”robots”" content="”noindex,nofollow”" />
<title>{pageTitle}</title>
<script
    type="text/partytown"
    async
    src="https://www.googletagmanager.com/gtag/js?id=G-KPGC2P8BQL"></script>
<script type="text/partytown">
    window.dataLayer = window.dataLayer || [];
    function gtag() {
        dataLayer.push(arguments);
    }
    gtag("js", new Date());

    gtag("config", "G-KPGC2P8BQL");
</script>
<script src="../utils/modernizr-custom.js"></script>